doctype html
html
  head
    title Sign In
    link(rel='stylesheet', type='text/css', href='/style.css')
  body
    header
      ul
        li
          a(href='/api/v1/users/signup') Sign Up
        li
          a(href='/api/v1/users/signin') Sign In
        li
          a(href='/api/v1/') Home
        li
          a(href='/api/v1/parcels') Admin
        li          
          a(href='/api/v1/signout') Sign out
    #signup
      h1 Sign In
      form(action='#', method='POST')
        table
          tbody
            tr
              td
                label(for='email') Your Email
              td
                input#email(type='text', name='email', placeholder='ex: all@gmail.com', required='')
            tr
              td
                label(for='password') Password:
              td
                input#password(type='password', name='password', required='')
            tr
              td
                input(type='submit', value='Sign in')
    footer
      p
        em
          a(href='/api/v1/') SEND IT
